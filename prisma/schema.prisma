generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Will store hashed password
  name      String
  createdAt DateTime @default(now())
  folders   Folder[]
  files     File[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

// Placeholder models 
model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  files     File[]
}

model File {
  id         Int      @id @default(autoincrement())
  name       String
  size       Int
  path       String   // must change to 'url' 
  uploadDate DateTime @default(now())
  folderId   Int
  folder     Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}